
<%- include("../header.ejs") %>

<section class="container mt-4">
   <H1 class="text-center"> Libraries</H1>
   <hr>
    <div class="row">
     
        <!-- From -------->
        <div class="col-12 col-md-6 mt-2">
            <form  action="/library" method="POST">
                <fieldset >
                  <h2 >Add Library</h2>
                  <div class="mb-3">
                    <label for="" class="form-label">Library</label>
                    <input name="library" type="text" id="" class="form-control" placeholder="Library ">
                  </div>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </fieldset>
              </form>
            
        </div>
        <div class="col-12 col-md-6 mt-2">
            <h2 > Libraries</h2>
   
            <table>
                <tr>
                  <th>Name</th>
                  <th class="text-center">Edit</th>
                  <th class="text-center">Delete</th>
                </tr>
               
                <% lib.forEach(function(obj){ %>
                
                  <tr>
                    <td  for="<%= obj._id%>"><%= obj.library %></td>
                    <td class="text-center"><i class="bi bi-pencil-square"></i></td>
                    <td class="text-center"><i class="bi bi-trash3 delete-icon" style="cursor: pointer;" for="<%= obj._id %>"></i></td>
                  </tr>
                <%})%>
              </table>
              

          
        </div>
    </div>
</section>



<%- include("../footer.ejs") %>